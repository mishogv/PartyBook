@page "/NightClubs/{name}"
@inject IApiClient client

<h3>NightClubDetails</h3>
<h3 class="text-center">NightClubs</h3>

@if (NightClub == null)
{
    <div>
        Loading ...
    </div>
}
else
{
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6 align-content-center text-center">
            <div class="card">
                <img class="card-img-top" src="@NightClub.CoverUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@NightClub.Name</h5>
                    <p class="card-text">@NightClub.Description</p>
                    <button class="btn btn-primary">Details</button>
                </div>
            </div>
        </div>
        <div class="col-md-3">

        </div>

    </div>
}


@code {
    public NightClubGetViewModel NightClub { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            NightClub = new NightClubGetViewModel();
        }
        catch (Exception exception)
        {
            Console.WriteLine(exception);
        }
    }
}